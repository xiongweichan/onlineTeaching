<UserControl x:Class="TeacherClient.MyPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeacherClient"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <PasswordBox x:Name="passwordBox" VerticalContentAlignment="Center"
                     PasswordChanged="passwordBox_PasswordChanged" Style="{DynamicResource PasswordBoxStyle1}"
                     HorizontalAlignment="{Binding HorizontalAlignment}"
                     VerticalAlignment="{Binding VerticalAlignment}"
                     Height="{Binding Height}"
                     Width="{Binding Width}"/>
        <TextBlock Text="{Binding Watermark}" IsHitTestVisible="False" Foreground="#FFCCCCCC" HorizontalAlignment="Left" Margin="10,0,0,0" d:LayoutOverrides="Height" Visibility="{Binding Password, Converter={StaticResource TextToVisibilityConverter}}" VerticalAlignment="Center" FontSize="{DynamicResource FontSize2}"/>
    </Grid>
</UserControl>
