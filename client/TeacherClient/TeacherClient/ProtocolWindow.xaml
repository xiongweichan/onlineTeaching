<local:WindowBase x:Class="TeacherClient.ProtocolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeacherClient"
        mc:Ignorable="d" Height="287" Width="456">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border CornerRadius="8,8,0,0" Background="#f9fafc">
            <TextBlock Margin="20,0,0,0" x:Name="tbl_Title" FontSize="{StaticResource FontSize2}" Foreground="#697795"/>
        </Border>
        <Grid Grid.Row="1" Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                       VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20">
                <TextBlock FontSize="{StaticResource FontSize3}" x:Name="tbl_Content" TextWrapping="Wrap"
                   Foreground="#424e67"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:WindowBase>
